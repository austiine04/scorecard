
<div class="row">
  <div class="col-md-6">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= field_set_tag 'Login' do %>
        <div class="field form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control login-field" %>
        </div>

        <div class="field form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off" , class: "form-control login-field"%>
        </div>

        <div class="actions">
          <%= f.submit "Log in", class: 'btn btn-lg btn-primary'%>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
